<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Price</th>
      <th>Shares</th>
      <th>Current Price</th>
      <th>Current Value</th>
      <th>P/L</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each_with_index do |stock,index| %>
      <tr>
        <td><%= stock[0] %></td>
        <td>$<%= stock[1] %></td>
        <td><%= stock[2] %></td>
        <td>$<%= stock[3] %></td>
        <td>$<%= stock[3].to_i * stock[2].to_i %></td>
        <td>$<%= (stock[3].to_i * stock[2].to_i) - (stock[1].to_i) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path %>
